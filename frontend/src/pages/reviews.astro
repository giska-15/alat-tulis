---
import Layout from "../layouts/Layout.astro";
import SiteTopBar from "../components/SiteTopBar.astro";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
---

<Layout title="My Reviews | Exclusive">
	<div id="top" class="bg-white text-zinc-900">
		<SiteTopBar />
		<SiteHeader active="none" accountName="Mirza" />

		<main class="mx-auto max-w-6xl px-4">
			<section class="py-8">
				<Breadcrumbs items={[{ label: "Home", href: "/" }, { label: "My Reviews" }]} />
				<div class="mt-10 rounded bg-white p-6 ring-1 ring-zinc-200">
					<h1 class="text-xl font-semibold">Ulasan Saya</h1>
					<p class="mt-2 text-sm text-zinc-600">Ulasan produk yang kamu buat akan tampil di sini.</p>
				</div>
			</section>
		</main>

		<SiteFooter />
	</div>
</Layout>
