			return (
				<svg class={className} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
					<path d="M12 21s-7-4.35-9.5-8.5C.6 9 .9 6.5 3 4.7c2.3-2 5.1-1.1 6.8.8L12 7.8l2.2-2.3c1.7-1.9 4.5-2.8 6.8-.8 2.1 1.8 2.4 4.3.5 7.8C19 16.7 12 21 12 21Z" />
				</svg>
			);
		case "eye":
			return (
				<svg class={className} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
					<path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7S2 12 2 12Z" />
					<circle cx="12" cy="12" r="3" />
				</svg>
			);
		case "search":
			return (
				<svg class={className} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
					<circle cx="11" cy="11" r="7" />
					<path d="M20 20l-3.2-3.2" />
				</svg>
			);
		case "cart":
			return (
				<svg class={className} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
					<path d="M6 6h15l-2 8H7L6 6Z" />
