---
const { tag, title, right } = Astro.props as {
	tag?: string;
	title: string;
	right?: any;
};
---

<div class="flex items-center justify-between">
	<div>
		{tag ? (
			<div class="flex items-center gap-2">
				<span class="inline-block h-6 w-3 rounded bg-red-500"></span>
				<p class="text-xs font-semibold text-red-500">{tag}</p>
			</div>
		) : null}
		<h2 class={(tag ? "mt-2 " : "") + "text-3xl font-semibold"}>{title}</h2>
	</div>
	{right ? <div class="flex items-center gap-3">{right}</div> : null}
</div>
